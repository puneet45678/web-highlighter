{
  "manifest_version": 3,
  "name": "Persistent Web Highlighter",
  "description": "Highlight text on any webpage and see it again when you revisit.",
  "version": "1.0.0",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_idle"

    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html"
  }
}
